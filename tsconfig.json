{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@entity/*": [
        "src/entity/*"
      ],
      "@repository/*": [
        "src/repository/*"
      ],
      "@service/*": [
        "src/service/*"
      ],
      "@routes/*": [
        "src/routes/*"
      ],
      "@server/*": [
        "src/server/*"
      ],
      "@controller/*": [
        "src/controller/*"
      ],
      "@http/*": [
        "src/http/*"
      ]
    },
    "sourceMap": true,
    "target": "es2017",
    "outDir": "./build",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "pretty": true,
    "noUnusedLocals": false,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}